<div class='row justify-content-between'>
  <% obj.each do |quiz| %>
  <div class="col-xl-3 col-lg-4 col-sm-6 cogit l-xs-12 d-flex">
        <div class="mb-3 card" style="width: 18rem;">
        <div class="card-body">
        <%= link_to(quiz.name, quiz_path(quiz.id)) %> <br />
        <%= quiz.description %> <br />
        </div>
        <% if can? :edit, quiz %>
        <div class="card-footer d-flex flex-row justify-content-between">
        <%= link_to 'Edit quiz', edit_quiz_path(quiz), class: 'btn btn-sm btn-primary align-self-end' %> 
        <% end %>
        <% if can? :delete, quiz %>
        <%= link_to 'Delete quiz', quiz_path(quiz), method: :delete, 
                            data: {confirm: 'You are about to delete this quiz, are you sure?'},
                            class: "btn btn-sm btn-danger float-right" %>
        </div>
        <% end %>
        </div>
  </div>
  <% end %>
</div>
